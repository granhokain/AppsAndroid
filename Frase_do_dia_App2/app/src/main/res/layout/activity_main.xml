<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="frase_do_dia.studio.rafael.frase_do_dia.MainActivity"
        android:background="@android:color/holo_orange_dark">

    <Button
            android:text="@string/texto_frase_dia"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:id="@+id/botaoNovaFraseID" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.069"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textoNovaFraseID" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/botaoNovaFraseID" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintVertical_bias="0.107"
            android:textSize="@dimen/texto_nova_frase" android:textColor="@android:color/white"
            tools:ignore="HardcodedText"/>
</android.support.constraint.ConstraintLayout>
